<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".ui.SpalshActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splashGuideLeft" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/spacing_775"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splashGuideRight" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/spacing_775"
        />

    <ImageView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@drawable/splash_title"

        app:layout_constraintStart_toStartOf="@id/splashGuideLeft"
        app:layout_constraintEnd_toEndOf="@id/splashGuideRight"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="@dimen/spacing_1550"
        />

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white_900"
        android:text="아르떼움"

        app:layout_constraintStart_toStartOf="@id/splashGuideLeft"
        app:layout_constraintEnd_toEndOf="@id/splashGuideRight"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginBottom="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>